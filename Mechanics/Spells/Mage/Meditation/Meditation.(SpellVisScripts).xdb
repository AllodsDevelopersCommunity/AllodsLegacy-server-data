<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<SpellVisScripts>
	
	<launch/>
	<actionBarStart type="VisActionList">
		<play>Simultaneously</play>
		<playWhile/>
		<elements>
			<Item type="CreatureEffectsAction">
				<visualEffects>
					<Item>
						<locator>FROM_LOCATOR_NAME</locator>
						<locatorName>Slot_TopFX</locatorName>
						<effectFx href="/Spells/FX/Spells/ReadySpellDirectIce.(VisObjectTemplate).xdb#xpointer(/VisObjectTemplate)"/>
					</Item>
				</visualEffects>
			</Item>
			<Item type="CreatureAnimationAction">
				<mode>LOOP</mode>
				<animations>
					<Item>sitGroundDown</Item>
					<Item>sitGround</Item>
				</animations>
				<channel>CHANNEL_DEFAULT</channel>
			</Item>
		</elements>
	</actionBarStart>
	<actionBarComplite type="CreatureAnimationAction">
		<mode>DIE</mode>
		<animations>
			<Item>sitGroundUp</Item>
		</animations>
		<channel>CHANNEL_IDLESPECIAL</channel>
	</actionBarComplite>
	<actionBarCancel type="CreatureAnimationAction">
		<mode>DIE</mode>
		<animations>
			<Item>sitGroundUp</Item>
		</animations>
		<channel>CHANNEL_IDLESPECIAL</channel>
	</actionBarCancel>
</SpellVisScripts>
