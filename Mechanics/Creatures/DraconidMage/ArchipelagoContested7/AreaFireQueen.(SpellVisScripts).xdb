				<elements>
					<Item type="CreatureEffectsAction">
						<visualEffects>
							<Item>
								<effectFx hrefvar="FXOnCaster" />
								<scale>0.8</scale>
							</Item>
						</visualEffects>
					</Item>
				</elements>
			</Item>
		</elements>
	</launch>
</SpellVisScripts>
